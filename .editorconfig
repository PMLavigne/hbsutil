# EditorConfig file
# See http://editorconfig.org/ if you don't know what that is

root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{htm,html,json,yml,scss,xml,hbs}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
